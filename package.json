{
  "name": "fractured-json-viewer-extension",
  "private": true,
  "type": "module",
  "version": "0.4.2",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "node scripts/build.mjs",
    "lint:ext": "web-ext lint --source-dir dist",
    "package": "web-ext build --source-dir dist --artifacts-dir artifacts --overwrite-dest --filename \"{name}-{version}.xpi\"",
    "ci": "npm run build && npm run lint:ext && npm run package",
    "bump:patch": "node scripts/bump-version.mjs patch",
    "bump:minor": "node scripts/bump-version.mjs minor",
    "bump:major": "node scripts/bump-version.mjs major",
    "sign:unlisted": "web-ext sign --source-dir dist --artifacts-dir artifacts-signed --channel unlisted"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "fracturedjsonjs": "^5.0.1",
    "prismjs": "^1.29.0",
    "web-ext": "^9.2.0"
  }
}
